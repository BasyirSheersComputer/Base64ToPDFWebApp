@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<h2>Submit Base64 String</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["ErrorMessage"]
    </div>
}

<form method="post" asp-page-handler="UploadBase64" enctype="multipart/form-data">
    <div class="form-group">
        <label for="base64String">Base64 String:</label>
        <textarea class="form-control" id="base64String" name="base64String" rows="5" required></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>